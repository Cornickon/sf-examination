<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Exam_current_date_rule</fullName>
    <active>false</active>
    <errorConditionFormula>OR(
	NOT(
	    AND(Exam_Start_Date__c&gt;=today(),Exam_End_Date__c&gt;=Exam_Start_Date__c)
	   ),
	NOT(and(Exam_Start_Date__c&lt;=today(),Exam_End_Date__c&gt;=Exam_Start_Date__c,Exam_End_Date__c&lt;=today())
	   )
  )</errorConditionFormula>
    <errorMessage>Current date cannot be within the examination period.</errorMessage>
</ValidationRule>
